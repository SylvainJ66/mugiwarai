---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Sylvain Jouglard — Profile';
const description = 'Senior Software Engineer with 15+ years in software development. Specializing in craftsmanship (TDD, DDD, Clean Architecture), microservices, cloud, and AI.';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Sylvain Jouglard",
  "jobTitle": "Senior Software Engineer",
  "description": "Senior Software Engineer with 15+ years in software development. Specializing in craftsmanship practices (TDD, DDD, Clean Architecture), microservices, cloud (AWS, Azure), and AI industrialization.",
  "url": "https://mugiwarai.dev/profile",
  "knowsAbout": [
    "TDD", "DDD", "Clean Architecture", "Software Craftsmanship", "Microservices",
    "C#", ".NET", "ASP.NET MVC", "Java", "PHP", "Python", "C++", "JavaScript", "Ruby on Rails",
    "AWS", "Azure", "Docker", "DevOps", "Heroku",
    "Apache Kafka", "RabbitMQ", "PostgreSQL", "MongoDB", "Oracle Database", "Microsoft SQL Server",
    "Scrum", "BDD", "Extreme Programming", "AI", "UML", "MVC", "Algorithms",
    "Event-Driven Architecture", "Kubernetes", "CI/CD", "GitOps"
  ],
  "worksFor": {
    "@type": "Organization",
    "name": "Intrasense"
  },
  "alumniOf": [
    {
      "@type": "EducationalOrganization",
      "name": "Ingésup (INSIA)"
    },
    {
      "@type": "EducationalOrganization",
      "name": "Greta la Défense"
    }
  ],
  "hasOccupation": [
    {
      "@type": "Occupation",
      "name": "Senior Software Engineer",
      "occupationLocation": { "@type": "City", "name": "France" },
      "description": "Refactoring solution with hexagonal architecture, feature development, AI processing scaling with Kubernetes/KEDA, telemetry, API guidelines, design-first service contracts.",
      "estimatedSalary": [],
      "skills": ".NET, Kubernetes, KEDA, Hexagonal Architecture, Telemetry, API Design"
    },
    {
      "@type": "Occupation",
      "name": "Software Development Engineer",
      "occupationLocation": { "@type": "City", "name": "Bordeaux, France" },
      "description": "Microservices development for Octopia (Marketplace as a Service): order management, discussions, cancellations, invoice imports, order exports.",
      "skills": "TDD, DDD, Clean Architecture, Kafka, MongoDB, .NET, C#, JavaScript, Scrum"
    },
    {
      "@type": "Occupation",
      "name": "Senior Fullstack Developer",
      "occupationLocation": { "@type": "City", "name": "Perpignan, France" },
      "description": "Legacy VB to .NET web migration of accounting suite. Clean Architecture, TDD, Azure DevOps, Entity Framework, CI setup.",
      "skills": ".NET, C#, Clean Architecture, TDD, Azure DevOps, Entity Framework, Oracle, SQL Server"
    },
    {
      "@type": "Occupation",
      "name": "Senior .NET Fullstack Developer",
      "occupationLocation": { "@type": "City", "name": "Perpignan, France" },
      "description": "TMS logistics software and accounting software development in C# .NET with WinForm, WebServices, MVC.",
      "skills": ".NET, C#, WinForm, MVC, DevExpress, JavaScript"
    },
    {
      "@type": "Occupation",
      "name": "Freelance Fullstack Developer",
      "occupationLocation": { "@type": "City", "name": "Paris, France" },
      "description": "Multi-language freelance development for large accounts (IBM, Kantar, Mondelez, Alcatel, Leo Pharma, Gefco) and web agencies.",
      "skills": "Java, C#, PHP, Ruby on Rails, WordPress"
    },
    {
      "@type": "Occupation",
      "name": "Ruby on Rails Fullstack Developer",
      "occupationLocation": { "@type": "City", "name": "Paris, France" },
      "description": "Development of quintonic.fr dating platform. Full agility with Scrum, XP, pair programming, TDD/BDD with Cucumber, CI with Jenkins, Heroku deployment.",
      "skills": "Ruby on Rails, Scrum, XP, TDD, BDD, Cucumber, Jenkins, Heroku"
    },
    {
      "@type": "Occupation",
      "name": "Web Developer (Apprenticeship)",
      "occupationLocation": { "@type": "City", "name": "Suresnes, France" },
      "description": "PHP application development including multisite CMS, 3 days per week apprenticeship.",
      "skills": "PHP"
    }
  ]
};
---

<BaseLayout title={title} description={description}>
  <script type="application/ld+json" slot="head-extra" set:html={JSON.stringify(jsonLd)} />

  <!-- Hero -->
  <section class="profile-hero">
    <div class="container hero-content">
      <h1>Sylvain Jouglard</h1>
      <p class="headline">Senior Software Engineer — 15+ Years in Software Development — Craftsmanship and AI</p>
      <p class="location">France</p>
    </div>
  </section>

  <!-- Summary -->
  <section class="container profile-section">
    <h2>About</h2>
    <div class="summary-card">
      <p>With over 15 years' experience in software development, I convert needs into robust, reliable solutions. I apply software development best practices — TDD, DDD, coherent architecture choices (modular monolith or microservices), and cloud technologies.</p>
      <p>I use Scrum and NoEstimate methods for rapid implementation and feedback loops. I bring DevOps expertise (Kubernetes, GitOps, AWS, Azure, CI/CD) to ensure applications behave predictably in production.</p>
      <p>I also focus on AI industrialization and smart use of AI tools (Claude Code, ChatGPT) for augmented coding workflows.</p>
    </div>
  </section>

  <!-- Experience -->
  <section class="container profile-section">
    <h2>Experience</h2>
    <div class="timeline">

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Senior Software Engineer</h3>
            <span class="company">Intrasense</span>
            <span class="date">Jun 2024 — Present</span>
            <span class="loc">France</span>
          </div>
          <ul>
            <li>Refactored the solution using hexagonal architecture for improved robustness</li>
            <li>Created features: filtering, routing, orchestration of medical studies</li>
            <li>Scaled AI processing with Kubernetes and KEDA</li>
            <li>Set up telemetry and established API guidelines</li>
            <li>Established contracts between services using a design-first approach</li>
          </ul>
        </div>
      </div>

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Software Development Engineer</h3>
            <span class="company">Cdiscount — Octopia</span>
            <span class="date">May 2022 — Jun 2024</span>
            <span class="loc">Bordeaux, France</span>
          </div>
          <ul>
            <li>Built and maintained microservices for the Octopia project (Marketplace as a Service)</li>
            <li>Order state management (Processing, Accepted, Shipped...)</li>
            <li>Created discussion system between customers, sellers, and sales channels</li>
            <li>Order cancellation management, invoice import, order export</li>
            <li>Tech stack: .NET, C#, JavaScript, Kafka, MongoDB with TDD, DDD, Clean Architecture, Scrum</li>
          </ul>
        </div>
      </div>

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Senior Fullstack Developer</h3>
            <span class="company">Harvard Gestion</span>
            <span class="date">Jan 2021 — May 2022</span>
            <span class="loc">Perpignan, France</span>
          </div>
          <ul>
            <li>Migrated legacy VB application to a web-based .NET C# accounting suite</li>
            <li>Chose and implemented Clean Architecture</li>
            <li>TDD for all feature development</li>
            <li>Set up Azure DevOps, Entity Framework (Oracle, SQL Server), and CI pipelines</li>
            <li>Daily use of LINQ for data transformation; frequent client feedback loops</li>
          </ul>
        </div>
      </div>

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Senior .NET Fullstack Developer</h3>
            <span class="company">Puissance I — Harvard Gestion</span>
            <span class="date">Mar 2019 — Jan 2021</span>
            <span class="loc">Perpignan, France</span>
          </div>
          <ul>
            <li>Developed TMS logistics software for supermarkets from detailed functional specifications</li>
            <li>C# .NET desktop application (WinForm), WebServices, DevExpress</li>
            <li>Developed accounting software with .NET, MVC, DevExpress, JavaScript</li>
          </ul>
        </div>
      </div>

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Freelance Fullstack Developer</h3>
            <span class="company">NOOR</span>
            <span class="date">Jan 2013 — Oct 2018</span>
            <span class="loc">Paris, France</span>
          </div>
          <ul>
            <li>Multi-language freelance developer for large accounts: IBM, Kantar, Mondelez, Alcatel, Leo Pharma, Gefco</li>
            <li>Enterprise work: Java, C#, PHP</li>
            <li>Web agency work: Ruby on Rails, PHP, WordPress</li>
          </ul>
        </div>
      </div>

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Ruby on Rails Fullstack Developer</h3>
            <span class="company">France Loisirs</span>
            <span class="date">Oct 2010 — Oct 2012</span>
            <span class="loc">Paris, France</span>
          </div>
          <ul>
            <li>Developed quintonic.fr — a friendly social platform for seniors</li>
            <li>Full agility: Scrum and Extreme Programming with one-week sprints and mandatory pair programming</li>
            <li>CI with Jenkins, cloud deployment with Heroku</li>
            <li>TDD and BDD with Cucumber; Gherkin written collaboratively with the Product Owner</li>
          </ul>
        </div>
      </div>

      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>Web Developer <span class="badge">Apprenticeship</span></h3>
            <span class="company">Imaginaty</span>
            <span class="date">Sep 2007 — May 2010</span>
            <span class="loc">Suresnes, France</span>
          </div>
          <ul>
            <li>PHP application development (3 days per week apprenticeship)</li>
            <li>Built multisite CMS systems</li>
          </ul>
        </div>
      </div>

    </div>
  </section>

  <!-- Education -->
  <section class="container profile-section">
    <h2>Education</h2>
    <div class="education-grid">
      <div class="edu-card">
        <h3>Engineering Degree</h3>
        <span class="company">Ingésup (INSIA)</span>
        <span class="date">2007 — 2010</span>
      </div>
      <div class="edu-card">
        <h3>BTS ARLE</h3>
        <span class="company">Greta la Défense</span>
        <span class="date">Sep 2004 — Jun 2006</span>
      </div>
    </div>
  </section>

  <!-- Skills -->
  <section class="container profile-section">
    <h2>Skills</h2>
    <div class="skills-grid">

      <div class="skill-group">
        <h3>Cloud & DevOps</h3>
        <div class="pills">
          <span class="pill">AWS</span>
          <span class="pill">Azure</span>
          <span class="pill">Docker</span>
          <span class="pill">Kubernetes</span>
          <span class="pill">Heroku</span>
          <span class="pill">DevOps</span>
          <span class="pill">CI/CD</span>
          <span class="pill">GitOps</span>
        </div>
      </div>

      <div class="skill-group">
        <h3>Languages</h3>
        <div class="pills">
          <span class="pill">C#</span>
          <span class="pill">.NET</span>
          <span class="pill">Java</span>
          <span class="pill">PHP</span>
          <span class="pill">Python</span>
          <span class="pill">C++</span>
          <span class="pill">JavaScript</span>
          <span class="pill">Ruby on Rails</span>
        </div>
      </div>

      <div class="skill-group">
        <h3>Architecture</h3>
        <div class="pills">
          <span class="pill">Clean Architecture</span>
          <span class="pill">Microservices</span>
          <span class="pill">DDD</span>
          <span class="pill">MVC</span>
          <span class="pill">Event-Driven Architecture</span>
          <span class="pill">UML</span>
          <span class="pill">Merise</span>
          <span class="pill">Algorithms</span>
        </div>
      </div>

      <div class="skill-group">
        <h3>Practices</h3>
        <div class="pills">
          <span class="pill">TDD</span>
          <span class="pill">BDD</span>
          <span class="pill">Software Craftsmanship</span>
          <span class="pill">Scrum</span>
          <span class="pill">Extreme Programming</span>
          <span class="pill">NoEstimate</span>
          <span class="pill">AI</span>
        </div>
      </div>

      <div class="skill-group">
        <h3>Databases</h3>
        <div class="pills">
          <span class="pill">PostgreSQL</span>
          <span class="pill">MongoDB</span>
          <span class="pill">Oracle Database</span>
          <span class="pill">Microsoft SQL Server</span>
        </div>
      </div>

      <div class="skill-group">
        <h3>Technologies</h3>
        <div class="pills">
          <span class="pill">Apache Kafka</span>
          <span class="pill">RabbitMQ</span>
          <span class="pill">ASP.NET MVC</span>
          <span class="pill">DevExpress</span>
          <span class="pill">Entity Framework</span>
        </div>
      </div>

    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .profile-hero {
    text-align: center;
    padding: 5rem 0 3rem;
    background: linear-gradient(180deg, var(--color-bg-light) 0%, var(--color-bg) 100%);
    border-bottom: 3px solid var(--color-primary);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .profile-hero h1 {
    font-size: 3rem;
    background: linear-gradient(135deg, var(--color-yellow), var(--color-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .headline {
    font-size: 1.15rem;
    color: var(--color-text);
    max-width: 650px;
  }

  .location {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }

  /* Sections */
  .profile-section {
    padding: 3rem 1.5rem;
  }

  .profile-section h2 {
    color: var(--color-yellow);
    margin-bottom: 1.5rem;
  }

  /* Summary */
  .summary-card {
    background: var(--color-bg-card);
    border-radius: var(--radius);
    padding: 1.5rem 2rem;
    border-left: 3px solid var(--color-primary);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .summary-card p {
    line-height: 1.7;
  }

  /* Timeline */
  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 7px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-primary);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0.35rem;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--color-primary);
    border: 3px solid var(--color-bg);
  }

  .timeline-item:first-child .timeline-marker {
    background: var(--color-yellow);
  }

  .timeline-content {
    background: var(--color-bg-card);
    border-radius: var(--radius);
    padding: 1.25rem 1.5rem;
  }

  .timeline-header {
    margin-bottom: 0.75rem;
  }

  .timeline-header h3 {
    font-family: var(--font-body);
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 0.25rem;
  }

  .company {
    display: block;
    color: var(--color-yellow);
    font-weight: 500;
    font-size: 0.95rem;
  }

  .date {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.85rem;
  }

  .loc {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.8rem;
  }

  .badge {
    display: inline-block;
    background: var(--color-primary);
    color: var(--color-white);
    font-family: var(--font-body);
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.15em 0.5em;
    border-radius: 999px;
    vertical-align: middle;
    margin-left: 0.4rem;
  }

  .timeline-content ul {
    list-style: none;
    padding: 0;
  }

  .timeline-content li {
    position: relative;
    padding-left: 1.2rem;
    margin-bottom: 0.35rem;
    font-size: 0.92rem;
    color: var(--color-text);
  }

  .timeline-content li::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--color-primary);
    font-weight: bold;
  }

  /* Education */
  .education-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .edu-card {
    background: var(--color-bg-card);
    border-radius: var(--radius);
    padding: 1.25rem 1.5rem;
    border-left: 3px solid var(--color-yellow);
  }

  .edu-card h3 {
    font-family: var(--font-body);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 0.25rem;
  }

  /* Skills */
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .skill-group h3 {
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-white);
    margin-bottom: 0.75rem;
  }

  .pills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .pill {
    display: inline-block;
    padding: 0.3em 0.75em;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 500;
    background: var(--color-bg-light);
    color: var(--color-text);
    border: 1px solid var(--color-primary);
    transition: background 0.2s, color 0.2s;
  }

  .pill:hover {
    background: var(--color-primary);
    color: var(--color-white);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .profile-hero h1 {
      font-size: 2.2rem;
    }

    .headline {
      font-size: 1rem;
    }

    .profile-section {
      padding: 2rem 1rem;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .education-grid,
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
