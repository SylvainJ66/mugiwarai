---
interface Props {
  size?: number;
}
const { size = 80 } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 200 200"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="pirate-flag"
>
  <!-- Crossbones -->
  <g stroke="#FFFFFF" stroke-width="10" stroke-linecap="round">
    <line x1="40" y1="150" x2="160" y2="70" />
    <line x1="160" y1="150" x2="40" y2="70" />
    <!-- Bone ends -->
    <circle cx="35" cy="153" r="8" fill="#FFFFFF" />
    <circle cx="45" cy="147" r="8" fill="#FFFFFF" />
    <circle cx="165" cy="153" r="8" fill="#FFFFFF" />
    <circle cx="155" cy="147" r="8" fill="#FFFFFF" />
    <circle cx="35" cy="67" r="8" fill="#FFFFFF" />
    <circle cx="45" cy="73" r="8" fill="#FFFFFF" />
    <circle cx="165" cy="67" r="8" fill="#FFFFFF" />
    <circle cx="155" cy="73" r="8" fill="#FFFFFF" />
  </g>

  <!-- Skull -->
  <ellipse cx="100" cy="95" rx="42" ry="38" fill="#FFFFFF" />
  <!-- Jaw -->
  <rect x="72" y="118" width="56" height="16" rx="6" fill="#FFFFFF" />

  <!-- Eyes -->
  <ellipse cx="84" cy="90" rx="10" ry="11" fill="#1B1B2F" />
  <ellipse cx="116" cy="90" rx="10" ry="11" fill="#1B1B2F" />

  <!-- Nose -->
  <ellipse cx="100" cy="104" rx="4" ry="3" fill="#1B1B2F" />

  <!-- Teeth lines -->
  <line x1="84" y1="119" x2="84" y2="133" stroke="#1B1B2F" stroke-width="2" />
  <line x1="94" y1="119" x2="94" y2="133" stroke="#1B1B2F" stroke-width="2" />
  <line x1="104" y1="119" x2="104" y2="133" stroke="#1B1B2F" stroke-width="2" />
  <line x1="114" y1="119" x2="114" y2="133" stroke="#1B1B2F" stroke-width="2" />

  <!-- Smile -->
  <path
    d="M 75 108 Q 100 122 125 108"
    stroke="#1B1B2F"
    stroke-width="3"
    fill="none"
  />

  <!-- Straw Hat -->
  <ellipse cx="100" cy="62" rx="55" ry="10" fill="#F4C542" />
  <path
    d="M 68 62 Q 68 30 100 28 Q 132 30 132 62"
    fill="#F4C542"
  />
  <!-- Hat band -->
  <rect x="70" y="52" width="60" height="8" rx="2" fill="#C41E3A" />
</svg>

<style>
  .pirate-flag {
    filter: drop-shadow(0 2px 8px rgba(244, 197, 66, 0.3));
    transition: transform 0.3s ease;
  }
  .pirate-flag:hover {
    transform: rotate(-5deg) scale(1.05);
  }
</style>
